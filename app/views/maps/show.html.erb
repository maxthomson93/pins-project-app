<!-- app/views/maps/show.html.erb -->
<div data-controller="google-maps"
     data-markers='<%= raw @markers.to_json %>'>
  <div class="g-map-sticky">
    <div id="map" style="width:100%; height:50vh;"></div>
  </div>
  <div class="container">
    <div class="pins-list-section">
      <div class="map-show-header">
        <div class="text-info">
          <h2><%= @map.name %></h2>
          <p class="description"><%= @map.description %></p>
        </div>
        <% if current_user && current_user.maps.include?(@map) %>
          <div class="icon-column">
            <div data-membership-target="icon">
              <i class="fa-solid fa-bookmark" style="color: #52946B; font-size: 1rem;"></i>
            </div>
            <div class="member-count">
              <%= number_with_delimiter(@map.users.count) %> members
            </div>
          </div>
        <% elsif current_user %>
          <%= link_to map_memberships_path(@map), class: "icon-button", data: { turbo_method: :post, action: "click->membership#join" } do %>
            <div class="icon-column">
              <div data-membership-target="icon">
                <i class="fa-regular fa-bookmark" style="color: #52946B; font-size: 1rem;"></i>
              </div>
              <div class="member-count">
                <%= number_with_delimiter(@map.users.count) %> members
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <%# # cards %>
      <div class="overflow-scroll-list">
        <% if @map.pins.any? %>
          <ul class="pins-list">
            <% @map.pins.each do |pin| %>
              <% place = pin.place %>
              <% if place.present? %>
                <li class="pin-card">
                  <%= link_to place_path(place) do %>
                    <div class="pincard-text">
                      <h2><%= place.title %></h2>
                      <p><%= place.address %></p>
                    </div>
                  <% end %>
                  <div class="icon-container">
                    <div class="btn-location-pin", data-action="click->google-maps#focusOn"
                          data-lat="<%= place.latitude %>"
                          data-lng="<%= place.longitude %>">
                      <i class="fa-solid fa-arrows-to-circle"></i>
                    </div>
                    <div>
                      <button type="button" class="btn-add-pin" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo"><i class="fa-solid fa-square-plus"></i></button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">which map do you want to add in?</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <%= simple_form_for @pin, url: pins_path do |f| %>
                                <div class="modal-body">
                                  <%= f.input :map_id, collection: current_user.maps, label: "Choose a map", as: :select, value_method: :id, label_method: :name, input_html: { class: "form-select" } %>
                                  <%= f.hidden_field :place_id, value: place.id %>
                                  <%= f.hidden_field :redirect_map_id, value: @map.id %>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                  <%= f.submit "Add Pin", class: 'btn btn-success' %>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        </div>
                    </div>
                  </div>
                </li>
              <% else %>
                <li class="pin-card">
                  <em>No place found.</em>
                </li>
              <% end %>
            <% end %>
          </ul>
        <% else %>
          <p>No pins yet in this map.</p>
        <% end %>
      </div>
    </div>
  </div>
